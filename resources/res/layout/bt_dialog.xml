<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@android:color/background_light" android:paddingLeft="24dp" android:paddingTop="18dp" android:paddingRight="24dp" android:paddingBottom="18dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="20sp" android:id="@+id/bt_dialog_tile" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Dialog Tilte"/>
    <TextView android:textSize="16sp" android:id="@+id/bt_dialog_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Dialog Message"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
        <LinearLayout android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textColor="@color/bt_dialog_click_selector" android:gravity="left" android:id="@+id/bt_dialog_left" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Left text"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textColor="@color/bt_dialog_click_selector" android:gravity="right" android:id="@+id/bt_dialog_right" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="right text"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
